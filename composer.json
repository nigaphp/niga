{
    "name": "nigatedev/nigatedev",
    "description": "Nigatedev PHP framework for saving time !",
    "type": "project",
    "keywords": ["framework", "nigatedev"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files":["config/functions.php"]
    },
    "authors": [
        {
            "name": "Abass Ben Cheik",
            "email": "abass@todaysdev.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "nigatedev/framework": "^1.0"
    },
    
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.94",
        "filp/whoops": "^2.14"
    },
    "scripts": {
      "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
      "phpstan": "phpstan analyse public/ src/",
      "tests": "phpunit tests/",
      "sniffer": "phpcs",
      "fix-sniff": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
