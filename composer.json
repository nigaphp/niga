{
    "name": "nigatedev/nigatedev",
    "description": "Nigatedev PHP framework for saving time !",
    "type": "project",
    "keywords": ["framework", "nigatedev"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files":["config/functions.php"]
    },
    "authors": [
        {
            "name": "Abass Ben Cheik",
            "email": "abass@todaysdev.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "nigatedev/framework-bundle": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.94",
        "filp/whoops": "^2.14",
        "fakerphp/faker": "^1.15"
    },
    "scripts": {
      "dev-server": "php -S localhost:8000 -t public/",
      "post-root-package-install": [
          "@php -r \"file_exists('.env') || @copy('.env.example', '.env');\"",
          "@php -r \"file_exists('env.tests.yaml') || @copy('env.tests.example.yaml', 'env.tests.yaml');\""
          ],
      "phpstan": "phpstan analyse src/",
      "tests": "phpunit tests/",
      "phpcs-show": "phpcs",
      "phpcs-fix": "phpcbf"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
