 * @Author Abass Ben Cheik <abass@todaysdev.com>
 * 
 */
$getForm = [];
if(isset($getMaker[1]) && $getMaker[1] === "make" && !isset($getMaker[3])){
  switch ($getMaker[2]) {
    case 'form':
      $fieldName = readline("Continue / Exit (Y/N): ");
      while ($fieldName !== "N") {
         $fieldName = readline("Field name / Exit (N): ");
        if ($fieldName == "N") {
          break;
        } 
         $fieldType = readline("Field type e.g(text, password...): ");
         $getForm[] = ["name" => $fieldName, "type" => $fieldType];
      }
      break;
    
    default:
      echo "Unknown command";
      break;
  }
}